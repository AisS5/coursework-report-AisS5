<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ADMIN_notifications"
    android:background="@drawable/background_image">

    <TextView
        android:id="@+id/admin_notifications_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="90dp"
        android:layout_marginTop="176dp"
        android:layout_marginEnd="90dp"
        android:text="NOTIFICATIONS"
        android:textColor="@color/darkBlue"
        android:textSize="50sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/NotificationButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="84dp"
        android:layout_marginTop="48dp"
        android:text="Turn Off Notifications"
        app:layout_constraintStart_toStartOf="@+id/admin_notifications_text"
        app:layout_constraintTop_toBottomOf="@+id/admin_notifications_text" />


</androidx.constraintlayout.widget.ConstraintLayout>