<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ADMIN_employees"
    android:background="@drawable/background_image">


    <ImageView
        android:id="@+id/back_btn"
        android:layout_width="70dp"
        android:layout_height="57dp"
        android:layout_marginTop="4dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/back_btn_24" />

    <TextView
        android:id="@+id/admin_holiday_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="90dp"
        android:layout_marginTop="143dp"
        android:layout_marginEnd="90dp"
        android:text="HOLIDAY REQUESTS"
        android:textColor="@color/darkBlue"
        android:textSize="40sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/request_recycler_view"
        android:layout_width="365dp"
        android:layout_height="299dp"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="@+id/admin_holiday_text"
        app:layout_constraintTop_toBottomOf="@+id/admin_holiday_text" />


</androidx.constraintlayout.widget.ConstraintLayout>