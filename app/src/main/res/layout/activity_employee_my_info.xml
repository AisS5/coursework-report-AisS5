<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ADMIN_employee_modify"
    android:background="@drawable/background_image">


    <ImageView
        android:id="@+id/back_btn"
        android:layout_width="70dp"
        android:layout_height="57dp"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/back_btn_24" />


    <TextView
        android:id="@+id/my_info_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:text="MY INFO"
        android:textColor="@color/darkBlue"
        android:textSize="50sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/back_btn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <EditText
        android:id="@+id/employee_id"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:hint="ENTER ID FIRST"
        android:inputType="text"
        android:textColor="@color/darkBlue"
        android:textColorHint="@color/darkBlue"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="198dp" />

    <EditText
        android:id="@+id/employee_firstname"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:hint="Firstname"
        android:inputType="text"
        android:textColor="@color/darkBlue"
        android:textColorHint="@color/darkBlue"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/employee_id" />

    <EditText
        android:id="@+id/employee_lastname"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:hint="Lastname"
        android:inputType="text"
        android:textColor="@color/darkBlue"
        android:textColorHint="@color/darkBlue"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/employee_firstname" />

    <TextView
        android:id="@+id/employee_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:hint="Email"
        android:text=""
        android:textColorHint="@color/darkBlue"
        android:textStyle="bold"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="@+id/employee_lastname"
        app:layout_constraintTop_toBottomOf="@+id/employee_lastname" />

    <TextView
        android:id="@+id/employee_joiningDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:hint="Joining Date"
        android:text=""
        android:textColorHint="@color/darkBlue"
        android:textStyle="bold"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="@+id/employee_email"
        app:layout_constraintTop_toBottomOf="@+id/employee_email" />

    <TextView
        android:id="@+id/employee_department"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:hint="Department"
        android:text=""
        android:textColorHint="@color/darkBlue"
        android:textStyle="bold"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="@+id/employee_joiningDate"
        app:layout_constraintTop_toBottomOf="@+id/employee_joiningDate" />

    <TextView
        android:id="@+id/employee_salary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:hint="Salary"
        android:text=""
        android:textColorHint="@color/darkBlue"
        android:textStyle="bold"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="@+id/employee_department"
        app:layout_constraintTop_toBottomOf="@+id/employee_department" />

    <TextView
        android:id="@+id/employee_leaves"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:hint="Leaves"
        android:text=""
        android:textColorHint="@color/darkBlue"
        android:textStyle="bold"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="@+id/employee_salary"
        app:layout_constraintTop_toBottomOf="@+id/employee_salary" />

    <ImageView
        android:id="@+id/save_btn"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginTop="616dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/save_btn_24" />

    <TextView
        android:id="@+id/save_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="Save"
        android:textColor="@color/darkBlue"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@id/save_btn"
        app:layout_constraintStart_toStartOf="@id/save_btn"
        app:layout_constraintEnd_toEndOf="@id/save_btn" />




</androidx.constraintlayout.widget.ConstraintLayout>
